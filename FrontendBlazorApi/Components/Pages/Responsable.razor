    private async Task PoblarDtoDesdeCompleta(ResponsableCompleta completa)
    {
        int fkId = 0;
        int fkIdTR = 0;

        // TipoResponsable: si viene texto intenta match por título; si viene id intenta parsear
        if (!string.IsNullOrWhiteSpace(completa.TipoResponsable))
        {
            var encontradoPorTitulo = listaTipoResponsables.FirstOrDefault(c => string.Equals(c.Titulo, completa.TipoResponsable, StringComparison.OrdinalIgnoreCase));
            if (encontradoPorTitulo != null)
                fkIdTR = encontradoPorTitulo.Id;
            else if (int.TryParse(completa.TipoResponsable, out var parsedTR))
                fkIdTR = parsedTR;
        }
        else if (completa.IdTipoResponsable.HasValue)
        {
            fkIdTR = completa.IdTipoResponsable.Value;
        }

        // Usuario: si viene id directo
        if (completa.IdUsuario.HasValue)
        {
            fkId = completa.IdUsuario.Value;
        }
        else if (!string.IsNullOrWhiteSpace(completa.Usuario) && int.TryParse(completa.Usuario, out var parsedUsu))
        {
            fkId = parsedUsu;
        }
        else if (!string.IsNullOrWhiteSpace(completa.Usuario))
        {
            var encontradoPorCodigo = listaUsuarios.FirstOrDefault(c => c.Id.ToString() == completa.Usuario);
            if (encontradoPorCodigo != null) fkId = encontradoPorCodigo.Id;
        }

        responsableActual.Id = completa.Id;
        responsableActual.Nombre = completa.Nombre ?? "";
        responsableActual.FkIdUsuario = fkId;
        responsableActual.FkIdTipoResponsable = fkIdTR;

        existeObjetivo = true;
        textoBotonGuardar = "Actualizar";
        mensaje = $"Responsable #{completa.Id} cargado.";
        claseAviso = "alert alert-success";

        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableActual, nameof(responsableActual.Id)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableActual, nameof(responsableActual.Nombre)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableActual, nameof(responsableActual.FkIdUsuario)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableActual, nameof(responsableActual.FkIdTipoResponsable)));

        StateHasChanged();
    }
