    </div>
</div>

@code {
    private EditContext? editContext;
    private List<MetaProyectoCompleta> listaMetaProyectos = new();
    private List<MetaDto> listaMetas = new();
    private List<ProyectoDto> listaProyectos = new();

    private MetaProyectoDto metaProyectoActual { get; set; } = new();

    private bool existeObjetivo = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlProcedimientos = "api/procedimientos/ejecutarsp";
    private const string urlConsultas = "api/consultas/ejecutarconsultaparametrizada";
    private const string urlMetaProyectos = "api/Meta_Proyecto";
    private const string urlMetas = "api/MetaEstrategica";
    private const string urlProyectos = "api/Proyecto";

    protected override async Task OnInitializedAsync()
    {
        // inicializa EditContext para que el EditForm lo use
        editContext = new EditContext(metaProyectoActual);

        // Cargar variables primero para evitar race conditions al mapear nombres.
        await CargarMetass();
        await CargarProyectos();
        await CargarMetaProyectos();
    }

    private async Task CargarProyectos()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlProyectos);

            listaProyectos = respuesta?.Datos?.Select(d =>
            {
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new ProyectoDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Titulo = ObtenerString(normal, "titulo")
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            mensaje = $"Error cargando Proyectos: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarProyectos: {ex}");
        }
    }

    private async Task CargarMetass()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlMetas);

            listaMetas = respuesta?.Datos?.Select(d =>
            {
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new MetaDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Titulo = ObtenerString(normal, "titulo") // si existe
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            mensaje = $"Error cargando Metas: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarMetass: {ex}");
        }
    }

    private async Task CargarMetaProyectos()
    {
        try
        {
            cargando = true;
            StateHasChanged();

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametrosConsulta = new Dictionary<string, object?>
            {
                ["consulta"] = @"
                    SELECT 
                        mp.idproyecto, 
                        mp.idmeta, 
                        mp.fechaAsociacion
                    FROM Meta_Proyecto mp 
                    ORDER BY mp.idmeta DESC",
                ["parametros"] = new Dictionary<string, object?>()
            };

            var respuesta = await client.PostAsJsonAsync(urlConsultas, parametrosConsulta);

            if (respuesta.IsSuccessStatusCode)
            {
                var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaConsulta>();

                listaMetaProyectos = resultado?.Resultados?.Select(d =>
                {
                    var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);

                    var fkTipo = ObtenerInt(normal, "idproyecto");
                    var fkMeta = ObtenerInt(normal, "idmeta");
                    var fechaAsociacion = ObtenerDateTime(normal, "fechaasociacion");

                    var tipoTitulo = listaProyectos.FirstOrDefault(x => x.Id == fkTipo)?.Titulo ?? "";
                    var metaDisplay = listaMetas.FirstOrDefault(x => x.Id == fkMeta)?.Id.ToString() ?? fkMeta.ToString();

                    return new MetaProyectoCompleta
                    {
                        IdProyecto = fkTipo,
                        IdMeta = fkMeta,
                        FechaAsociacion = fechaAsociacion,
                        Proyecto = tipoTitulo,
                        Meta = metaDisplay
                    };

                }).ToList() ?? new();

                mensaje = $"Se cargaron {listaMetaProyectos.Count} asociaciones Producto-Proyecto.";
                claseAviso = "alert alert-success";
                StateHasChanged();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar Metao_Proyecto: {detalle}";
                claseAviso = "alert alert-danger";
                Console.WriteLine($"Detalle CargarMetaProyectos: {detalle}");
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar Metao_Proyecto: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarMetaProyectos: {ex}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }


    private async Task BuscarPorNumero()
    {
        LimpiarMensajes();

        if (metaProyectoActual.FkIdProyecto <= 0)
        {
            mensaje = "Debe indicar el número de Responsable.";
            claseAviso = "alert alert-warning";
            return;
        }

        await CargarMetaProyectoCompleta(metaProyectoActual.FkIdProyecto);
    }

    private async Task CargarMetaProyectoCompleta(int numeroMetaProyecto)
    {
    LimpiarMensajes();

    try
    {
        var client = fabricaHttp.CreateClient("ApiProductos");

        var parametros = new Dictionary<string, object?>
        {
            ["nombreSP"] = "consultar_meta_proyecto",
            ["p_IdProyecto"] = numeroMetaProyecto
        };

        var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

        var contenido = await respuesta.Content.ReadAsStringAsync();
        Console.WriteLine($"DEBUG CargarMetaProyectoCompleta - Status: {respuesta.StatusCode}, Body: {contenido}");

        if (!respuesta.IsSuccessStatusCode)
        {
            mensaje = $"❌ Error al cargar responsable: {contenido}";
            claseAviso = "alert alert-danger";
            return;
        }

        // Intentamos deserializar en RespuestaSP si el backend nos envía esa estructura
        RespuestaSP? resultadoSP = null;
        try
        {
            resultadoSP = JsonSerializer.Deserialize<RespuestaSP>(contenido, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
        }
        catch (Exception ex)
        {
            Console.WriteLine($"DEBUG deserializar RespuestaSP falló: {ex.Message}");
        }

        if (resultadoSP?.Resultados != null && resultadoSP.Resultados.Count > 0)
        {
            var primeraFila = resultadoSP.Resultados[0];
            Console.WriteLine($"DEBUG keys primeraFila: {string.Join(", ", primeraFila.Keys)}");

            // Declarar variables fuera para evitar CS0165
            primeraFila.TryGetValue("Resultado", out var valSingObj);
            primeraFila.TryGetValue("Resultados", out var valPlurObj);

            var token = valSingObj ?? valPlurObj; // puede ser null
            if (token != null)
            {
                var jsonInterno = token.ToString();
                if (!string.IsNullOrWhiteSpace(jsonInterno))
                {
                    try
                    {
                        var opciones = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                        if (jsonInterno.TrimStart().StartsWith("["))
                        {
                            var arr = JsonSerializer.Deserialize<List<MetaProyectoCompleta>>(jsonInterno, opciones);
                            if (arr != null && arr.Count > 0)
                            {
                                await PoblarDtoDesdeCompleta(arr[0]);
                                return;
                            }
                        }
                        else
                        {
                            var obj = JsonSerializer.Deserialize<MetaProyectoCompleta>(jsonInterno, opciones);
                            if (obj != null)
                            {
                                await PoblarDtoDesdeCompleta(obj);
                                return;
                            }
                        }
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"DEBUG parseo JSON interno falló: {ex.Message}");
                    }
                }
            }

            // caso: fila con columnas directas
            var normal = primeraFila.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
            if (normal.Count > 0)
            {
                var fkMeta = ObtenerInt(normal, "idmeta");
                var fkTipo = ObtenerInt(normal, "idproyecto");
                var fechaAsociacion = ObtenerDateTime(normal, "fechaasociacion");

                metaProyectoActual.FkIdMeta = fkMeta;
                metaProyectoActual.FkIdProyecto = fkTipo;
                // si tu propiedad FechaAsociacion es DateTime? mejor; ajusta según tu DTO
                metaProyectoActual.FechaAsociacion = fechaAsociacion;

                editContext?.NotifyFieldChanged(new FieldIdentifier(metaProyectoActual, nameof(metaProyectoActual.FkIdMeta)));
                editContext?.NotifyFieldChanged(new FieldIdentifier(metaProyectoActual, nameof(metaProyectoActual.FkIdProyecto)));
                editContext?.NotifyFieldChanged(new FieldIdentifier(metaProyectoActual, nameof(metaProyectoActual.FechaAsociacion)));

                existeObjetivo = true;
                textoBotonGuardar = "Actualizar";
                mensaje = $"Asociación cargada: ProyectoId={fkTipo}, MetaId={fkMeta}";
                claseAviso = "alert alert-success";
                StateHasChanged();
                return;
            }
        }

        // Intento fallback: parseo libre del body (por si la API responde otra estructura)
        try
        {
            var opciones = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };

            if (contenido.TrimStart().StartsWith("{"))
            {
                using var doc = JsonDocument.Parse(contenido);
                if (doc.RootElement.TryGetProperty("Resultados", out var rootResultados))
                {
                    if (rootResultados.ValueKind == JsonValueKind.String)
                    {
                        var inner = rootResultados.GetString();
                        if (!string.IsNullOrWhiteSpace(inner))
                        {
                            if (inner.TrimStart().StartsWith("["))
                            {
                                var arr = JsonSerializer.Deserialize<List<MetaProyectoCompleta>>(inner, opciones);
                                if (arr != null && arr.Count > 0)
                                {
                                    await PoblarDtoDesdeCompleta(arr[0]);
                                    return;
                                }
                            }
                            else
                            {
                                var obj = JsonSerializer.Deserialize<MetaProyectoCompleta>(inner, opciones);
                                if (obj != null)
                                {
                                    await PoblarDtoDesdeCompleta(obj);
                                    return;
                                }
                            }
                        }
                    }
                    else if (rootResultados.ValueKind == JsonValueKind.Array)
                    {
                        var arr = JsonSerializer.Deserialize<List<MetaProyectoCompleta>>(rootResultados.GetRawText(), opciones);
                        if (arr != null && arr.Count > 0)
                        {
                            await PoblarDtoDesdeCompleta(arr[0]);
                            return;
                        }
                    }
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"DEBUG intento final parseo libre falló: {ex.Message}");
        }

        mensaje = "Responsable no encontrado o formato de respuesta inesperado.";
        claseAviso = "alert alert-warning";
    }
    catch (Exception ex)
    {
        mensaje = $"Error al cargar Responsable: {ex.Message}";
        claseAviso = "alert alert-danger";
        Console.WriteLine($"Exception CargarMetaProyectoCompleta: {ex}");
    }
}


