@code {
    private EditContext? editContext;
    private List<ActividadCompleta> listaActividades = new();
    private List<EntregableDto> listaEntregables = new();

    private ActividadDto actividadActual { get; set; } = new();

    private bool existeObjetivo = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlProcedimientos = "api/procedimientos/ejecutarsp";
    private const string urlConsultas = "api/consultas/ejecutarconsultaparametrizada";
    private const string urlActividades = "api/Actividad";
    private const string urlEntregables = "api/Entregable";

    protected override async Task OnInitializedAsync()
    {
        // inicializa EditContext para que el EditForm lo use
        editContext = new EditContext(actividadActual);

        // Cargar entregables primero para evitar race conditions al mapear nombres.
        await CargarEntregables();
        await CargarActividades();
    }

    private async Task CargarDatosIniciales()
    {
        // Mantenido por compatibilidad en caso de uso futuro
        await CargarEntregables();
        await CargarActividades();
    }

    private async Task CargarEntregables()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlEntregables);

            listaEntregables = respuesta?.Datos?.Select(d =>
            {
                // normaliza keys por seguridad
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new EntregableDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Titulo = ObtenerString(normal, "titulo")
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            // Al menos informar al usuario
            mensaje = $"Error cargando entregables: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarEntregables: {ex}");
        }
    }

    private async Task CargarActividades()
    {
        try
        {
            cargando = true;
            StateHasChanged();

            var client = fabricaHttp.CreateClient("ApiProductos");

            // IMPORTANTE: aliaso IdVariable como fkidentregable para que el mapping existente funcione
            
            var parametrosConsulta = new Dictionary<string, object?>
            {
                ["consulta"] = @"
                    SELECT 
                        f.id, 
                        f.IdEntregable, 
                        f.titulo, 
                        f.descripcion,
                        f.fechaInicio, 
                        f.fechaFinPrevista,
                        f.fechaModificacion,
                        f.fechaFinalizacion, 
                        f.prioridad,
                        f.porcentajeAvance
                    FROM Actividad f 
                    ORDER BY f.id DESC",
                ["parametros"] = new Dictionary<string, object?>()
            };


            var respuesta = await client.PostAsJsonAsync(urlConsultas, parametrosConsulta);

            if (respuesta.IsSuccessStatusCode)
            {
                var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaConsulta>();

                listaActividades = resultado?.Resultados?.Select(d =>
                {
                    // normaliza claves a min√∫sculas para evitar problemas con casing
                    var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);

                    var id = ObtenerInt(normal, "id");
                    var fkVar = ObtenerInt(normal, "identregable");
                    var titulo = ObtenerString(normal, "titulo");
                    var descripcion = ObtenerString(normal, "descripcion");

                    var fechaInicio = ObtenerDateTime(normal, "fechainicio");
                    var fechaFinPrevista = ObtenerDateTime(normal, "fechafinprevista");
                    var fechaModificacion = ObtenerDateTime(normal, "fechamodificacion");
                    var fechaFinalizacion = ObtenerDateTime(normal, "fechafinalizacion");

                    var prioridad = ObtenerInt(normal, "prioridad");
                    var porcentajeAvance = ObtenerInt(normal, "porcentajeavance");

                    var nombreVar = listaEntregables.FirstOrDefault(x => x.Id == fkVar)?.Titulo ?? fkVar.ToString();

                    return new ActividadCompleta
                    {
                        Id = id,
                        Entregable = nombreVar,
                        Titulo = titulo,
                        Descripcion = descripcion,
                        FechaInicio = fechaInicio,
                        FechaFinPrevista = fechaFinPrevista,
                        FechaModificacion = fechaModificacion,
                        FechaFinalizacion = fechaFinalizacion,
                        Prioridad = prioridad,
                        PorcentajeAvance = porcentajeAvance
                    };

                }).ToList() ?? new();
                StateHasChanged(); 

                mensaje = $"Se cargaron {listaActividades.Count} Objetivo Estrategico(s).";
                claseAviso = "alert alert-success";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"‚ùå Error al cargar Objetivos: {detalle}";
                claseAviso = "alert alert-danger";
                Console.WriteLine($"Detalle CargarActividades: {detalle}");
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar Objetivos Estrategicos: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarActividades: {ex}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task BuscarPorNumero()
    {
        LimpiarMensajes();

        if (actividadActual.Id <= 0)
        {
            mensaje = "Debe indicar el n√∫mero de Objetivo Estrategico.";
            claseAviso = "alert alert-warning";
            return;
        }

        await CargarActividadCompleta(actividadActual.Id);
    }

    private async Task CargarActividadCompleta(int numeroActividad)
    {
        LimpiarMensajes();

        try
        {
            if (listaEntregables == null || listaEntregables.Count == 0)
            {
                await CargarEntregables(); // üëà aseg√∫rate de que la lista est√© disponible antes de usarla
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "consultar_actividad",
                ["Id"] = numeroActividad
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (!respuesta.IsSuccessStatusCode)
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"‚ùå Error al cargar objetivo: {detalle}";
                claseAviso = "alert alert-danger";
                return;
            }

            var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaSP>();

            if (resultado?.Resultados == null || resultado.Resultados.Count == 0)
            {
                mensaje = "Objetivo Estrategico no encontrado.";
                claseAviso = "alert alert-warning";
                return;
            }

            var primeraFila = resultado.Resultados[0];

            // 1) Si la fila contiene una clave "Resultado" con JSON -> deserializar
            if ((primeraFila.TryGetValue("Resultado", out var val) ||
            primeraFila.TryGetValue("Resultados", out val)) && val != null)
            {
                var json = val.ToString();
                if (!string.IsNullOrWhiteSpace(json))
                {
                    var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                    var objetivoDesdeJson = JsonSerializer.Deserialize<ActividadCompleta>(json, options);
                    if (objetivoDesdeJson != null)
                    {
                        await PoblarDtoDesdeCompleta(objetivoDesdeJson);
                        return;
                    }
                }
            }

            // 2) Si la fila ya viene con columnas (id, titulo, descripcion, entregable) -> mapear directamente
            var normal = primeraFila.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
            if (normal.Count > 0)
            {
                var id = ObtenerInt(normal, "id");
                var titulo = ObtenerString(normal, "titulo");
                var descripcion = ObtenerString(normal, "descripcion");

                var fechaInicio = ObtenerDateTime(normal, "fechainicio");
                var fechaFinPrevista = ObtenerDateTime(normal, "fechafinprevista");
                var fechaModificacion = ObtenerDateTime(normal, "fechamodificacion");
                var fechaFinalizacion = ObtenerDateTime(normal, "fechafinalizacion");

                var prioridad = ObtenerInt(normal, "prioridad");
                var porcentajeAvance = ObtenerInt(normal, "porcentajeavance");

                // entregable puede venir como nombre o como id (IdVariable o entregable)
                // entregable puede venir como nombre o como id (seg√∫n la consulta)
                var entregableStr = ObtenerString(normal, "entregable");
                if (string.IsNullOrEmpty(entregableStr))
                    entregableStr = ObtenerString(normal, "identregable");
                int fkId = 0;
                var encontradoPorTitulo = listaEntregables.FirstOrDefault(c => c.Titulo == entregableStr);
                if (encontradoPorTitulo != null)
                    fkId = encontradoPorTitulo.Id;
                else if (int.TryParse(entregableStr, out var parsed))
                    fkId = parsed;

                actividadActual = new ActividadDto
                {
                    Id = id,
                    Titulo = titulo,
                    IdEntregable = fkId,
                    Descripcion = descripcion,
                    FechaInicio = fechaInicio,
                    FechaFinPrevista = fechaFinPrevista,
                    FechaModificacion = fechaModificacion,
                    FechaFinalizacion = fechaFinalizacion,
                    Prioridad = prioridad,
                    PorcentajeAvance = porcentajeAvance
                };

                existeObjetivo = true;
                textoBotonGuardar = "Actualizar";
                mensaje = $"Objetivo Estrategico #{numeroActividad} cargado.";
                claseAviso = "alert alert-success";

                StateHasChanged(); // üëà Esto es clave

                return;
            }

            mensaje = "No se pudo interpretar el resultado del procedimiento.";
            claseAviso = "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al cargar Objetivo Estrategico: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarActividadCompleta: {ex}");
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeObjetivo)
            await ActualizarActividad();
        else
            await CrearActividad();
    }


    private async Task CrearActividad()
    {
        LimpiarMensajes();

        try
        {
            // validaciones b√°sicas
            actividadActual.Titulo = actividadActual.Titulo?.Trim() ?? "";
            actividadActual.Descripcion = actividadActual.Descripcion?.Trim() ?? "";

            if (actividadActual.IdEntregable <= 0)
            {
                mensaje = "‚ö†Ô∏è Debe seleccionar Entregable.";
                claseAviso = "alert alert-warning";
                return;
            }

            if (string.IsNullOrEmpty(actividadActual.Titulo))
            {
                mensaje = "‚ö†Ô∏è El t√≠tulo es obligatorio.";
                claseAviso = "alert alert-warning";
                return;
            }
            
            if (actividadActual.Prioridad < 0)
            {
                mensaje = "‚ö†Ô∏è La prioridad no puede ser negativa.";
                claseAviso = "alert alert-warning";
                return;
            }

            if (actividadActual.FechaInicio == null || actividadActual.FechaFinPrevista == null)
            {
                mensaje = "‚ö†Ô∏è Debe indicar las fechas de inicio y fin prevista.";
                claseAviso = "alert alert-warning";
                return;
            }


            var client = fabricaHttp.CreateClient("ApiProductos");

            // env√≠o los par√°metros con los nombres exactos que espera el SP en SQL Server
            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "crear_actividad",
                ["IdEntregable"] = actividadActual.IdEntregable,
                ["Titulo"] = actividadActual.Titulo,
                ["Descripcion"] = actividadActual.Descripcion,

                ["FechaInicio"] = actividadActual.FechaInicio?.Date,
