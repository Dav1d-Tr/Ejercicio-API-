            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al crear Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CrearResponsableEntregable: {ex}");
        }
    }

    private async Task ActualizarResponsableEntregable()
    {
        LimpiarMensajes();

        try
        {
            if (responsableEntregableActual.FkIdEntregable <= 0)
            {
                mensaje = "⚠️ Debe indicar el número de Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de actualizar el responsable #{responsableEntregableActual.FkIdEntregable}?");
            if (!confirmar)
            {
                mensaje = "ℹ️ Actualización cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "actualizar_responsable_entregable",
                ["p_IdEntregable"] = responsableEntregableActual.FkIdEntregable,
                ["p_FechaAsociacion"] = responsableEntregableActual.FechaAsociacion,
                ["p_IdResponsable"] = responsableEntregableActual.FkIdResponsable
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Responsable actualizado exitosamente.";
                claseAviso = "alert alert-success";

                // Actualiza la lista local si existe el elemento
                var item = listaResponsableEntregables.FirstOrDefault(x => x.IdEntregable == responsableEntregableActual.FkIdEntregable);
                if (item != null)
                {
                    item.FechaAsociacion = responsableEntregableActual.FechaAsociacion;
                    item.Responsable= listaProducts.FirstOrDefault(v => v.Id == responsableEntregableActual.FkIdResponsable)?.Id.ToString()
                                   ?? responsableEntregableActual.FkIdResponsable.ToString();
                    item.IdResponsable= responsableEntregableActual.FkIdResponsable;
                    item.Entregable = listaEntregables.FirstOrDefault(v => v.Id == responsableEntregableActual.FkIdEntregable)?.Titulo
                                           ?? responsableEntregableActual.FkIdEntregable.ToString();
                    item.IdEntregable = responsableEntregableActual.FkIdEntregable;
                    StateHasChanged();
                }

                // refrescar para mantener consistencia con BD
                await CargarResponsableEntregables();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                Console.WriteLine(detalle);
                mensaje = $"❌ Error al actualizar: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al actualizar Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception ActualizarResponsableEntregable: {ex}");
        }
    }

    private async Task EliminaResponsableEntregable()
    {
        LimpiarMensajes();

        try
        {
            if (responsableEntregableActual.FkIdEntregable <= 0)
            {
                mensaje = "Debe indicar el número de Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de eliminar el responsable #{responsableEntregableActual.FkIdEntregable}?");
            if (!confirmar)
            {
                mensaje = "Eliminación cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "eliminar_responsable_entregable",
                ["p_IdResponsable"] = responsableEntregableActual.FkIdResponsable,
                ["p_IdEntregable"] = responsableEntregableActual.FkIdEntregable
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

