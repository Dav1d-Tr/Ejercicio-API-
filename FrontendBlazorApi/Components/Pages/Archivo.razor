@page "/archivo"
@using System.Net.Http.Json
@using System.Text.Json
@using System.Text.Json.Serialization
@using System.Linq
@using System.ComponentModel.DataAnnotations
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Archivos</PageTitle>

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-receipt fs-2 text-primary me-3"></i>
        <h3 class="mb-0">Gestión de Archivos</h3>
    </div>

    <div class="mb-3 d-flex gap-2 flex-wrap">
        @*Boton Probar conexión*@
        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3"
                style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-white fw-semibold" style="
                        background: linear-gradient(to bottom, #414448, #646c7d);
                        border: 1px solid #6a6a6c;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="ProbarConexion" title="Probar conexión con la API" onmousedown="this.style.transform='scale(0.98)';"
                    onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Probar Conexión</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        @*Boton Mostrar todos*@
        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3"
                style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-white fw-semibold" style="
                        background: linear-gradient(to bottom, #357de9, #8ea6e0);
                        border: 1px solid #8ea6e0;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="CargarArchivos" title="Mostrar todos los objetivos" onmousedown="this.style.transform='scale(0.98)';"
                    onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Mostrar Todos</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        @*Boton Limpiar*@
        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3"
                style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-black fw-semibold" style="
                        background: linear-gradient(to bottom, #ffffff, #c3cde7);
                        border: 1px solid #dde5f8;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="LimpiarFormulario" title="Limpiar formulario" onmousedown="this.style.transform='scale(0.98)';"
                    onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Limpiar</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>@mensaje
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-clipboard-plus me-2"></i>Formulario de Archivo</h4>
        </div>
        <div class="card-body">
            <EditForm EditContext="editContext" OnValidSubmit="GuardarSegunEstado">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Id
                        </label>
                        <InputNumber class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="archivoActual.Id" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Usuario
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="archivoActual.FkIdUsuario">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaUsuarios)
                            {
                                <option value="@c.Id">@c.Email (ID: @c.Id)</option>
                            }
                        </InputSelect>

                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Ruta
                        </label>
                        <InputText class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="archivoActual.Ruta" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Nombre
                        </label>
                        <InputText class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="archivoActual.Nombre" />
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Tipo
                        </label>
                        <InputText class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="archivoActual.Tipo" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="archivoActual.Fecha" />
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <button type="submit"
                        class="btn-create d-flex align-items-center gap-1 text-white font-weight-bold border border-success rounded-pill px-4 py-2">
                        <img src="icons/paper-plane-solid.svg" alt="Guardar" width="24" height="24" class="me-1" />
                        @textoBotonGuardar
                    </button>
                    <button type="button"
                        class="btn-buscar d-flex align-items-center gap-1 text-white font-weight-bold border border-secondary rounded-pill px-4 py-2"
                        @onclick="BuscarPorNumero" title="Buscar objetivo por número">
                        <img src="icons/magnifying-glass-solid.svg" alt="Buscar" width="24" height="24" class="me-1" />
                        Buscar
                    </button>

                    <button type="button"
                        class="btn-eliminar d-flex align-items-center gap-1 text-white font-weight-bold border border-danger rounded-pill px-4 py-2"
                        @onclick="EliminaArchivo" disabled="@(!existeObjetivo)" title="Eliminar objetivo">
                        <img src="icons/trash-can-solid.svg" alt="Eliminar" width="24" height="24" class="me-1" />
                        Eliminar
                    </button>
                </div>
                
            </EditForm>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-table me-2"></i>Lista de Archivos</h4>
        </div>
        <div class="card-body">
            @if (cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3"><em>Cargando Archivos...</em></p>
                </div>
            }
            else if (listaArchivos.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No hay Archivos disponibles.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th><i class="bi bi-hash me-1"></i>Id</th>
                                <th><i class="bi bi-person me-1"></i>Usuario</th>
                                <th><i class="bi bi-person-badge me-1"></i>Ruta</th>
                                <th><i class="bi bi-calendar me-1"></i>Nombre</th>
                                <th><i class="bi bi-calendar me-1"></i>Tipo</th>
                                <th><i class="bi bi-person-badge me-1"></i>Fecha</th>
                                <th><i class="bi bi-gear me-1"></i>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var f in listaArchivos)
                            {
                                <tr>
                                    <td>@f.Id</td>
                                    <td>@f.Usuario</td> <!-- antes tenías IdVariable -->
                                    <td>@f.Ruta</td>
                                    <td>@f.Nombre</td>
                                    <td>@f.Tipo</td>
                                    <td>@f.Fecha</td>
                                    <td>
                                        <button class="btn-cargar d-flex align-items-center gap-1 text-white font-weight-bold border border-primary rounded-pill px-4 py-2"
                                                @onclick="@(async () => await CargarArchivoCompleta(f.Id))" 
                                                title="Cargar Objetivo en formulario">
                                            <img src="icons/spinner-solid.svg" alt="Cargar" width="24" height="24" class="me-1" />
                                            Cargar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private EditContext? editContext;
    private List<ArchivoCompleta> listaArchivos = new();
    private List<UsuarioDto> listaUsuarios = new();

    private ArchivoDto archivoActual { get; set; } = new();

    private bool existeObjetivo = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlProcedimientos = "api/procedimientos/ejecutarsp";
    private const string urlConsultas = "api/consultas/ejecutarconsultaparametrizada";
    private const string urlArchivos = "api/Archivo";
    private const string urlUsuarios = "api/Usuario";

    protected override async Task OnInitializedAsync()
    {
        // inicializa EditContext para que el EditForm lo use
        editContext = new EditContext(archivoActual);

        // Cargar variables primero para evitar race conditions al mapear nombres.
        await CargarUsuarios();
        await CargarArchivos();
    }

    private async Task CargarDatosIniciales()
    {
        // Mantenido por compatibilidad en caso de uso futuro
        await CargarUsuarios();
        await CargarArchivos();
    }

    private async Task CargarUsuarios()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlUsuarios);

            listaUsuarios = respuesta?.Datos?.Select(d =>
            {
                // normaliza keys por seguridad
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new UsuarioDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Email = ObtenerString(normal, "titulo")
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            // Al menos informar al usuario
            mensaje = $"Error cargando usuarios: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarUsuarios: {ex}");
        }
    }

    private async Task CargarArchivos()
    {
        try
        {
            cargando = true;
            StateHasChanged();

            var client = fabricaHttp.CreateClient("ApiProductos");

            // IMPORTANTE: aliaso IdVariable como fkidusuario para que el mapping existente funcione
            
            var parametrosConsulta = new Dictionary<string, object?>
            {
                ["consulta"] = @"
                    SELECT 
                        f.id, 
                        f.IdUsuario AS fkidusuario, 
                        f.ruta, 
                        f.nombre,
                        f.tipo,
                        f.fecha
                    FROM Archivo f 
                    ORDER BY f.id DESC",
                ["parametros"] = new Dictionary<string, object?>()
            };


            var respuesta = await client.PostAsJsonAsync(urlConsultas, parametrosConsulta);

            if (respuesta.IsSuccessStatusCode)
            {
                var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaConsulta>();

                listaArchivos = resultado?.Resultados?.Select(d =>
                {
                    // normaliza claves a minúsculas para evitar problemas con casing
                    var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);

                    var id = ObtenerInt(normal, "id");
                    var fkVar = ObtenerInt(normal, "fkidusuario");
                    var ruta = ObtenerString(normal, "ruta");
                    var nombre = ObtenerString(normal, "nombre");
                    var tipo = ObtenerString(normal, "tipo");
                    var fecha = ObtenerDateTime(normal, "fecha");

                    var nombreVar = listaUsuarios.FirstOrDefault(x => x.Id == fkVar)?.Email ?? fkVar.ToString();

                    return new ArchivoCompleta
                    {
                        Id = id,
                        Usuario = nombreVar,
                        Ruta = ruta ?? "",
                        Nombre = nombre ?? "",
                        Tipo = tipo ?? "",
                        Fecha = fecha
                    };

                }).ToList() ?? new();
                StateHasChanged(); 

                mensaje = $"Se cargaron {listaArchivos.Count} Archivo(s).";
                claseAviso = "alert alert-success";
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar Objetivos: {detalle}";
                claseAviso = "alert alert-danger";
                Console.WriteLine($"Detalle CargarArchivos: {detalle}");
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar Archivos: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarArchivos: {ex}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task BuscarPorNumero()
    {
        LimpiarMensajes();

        if (archivoActual.Id <= 0)
        {
            mensaje = "Debe indicar el número de Archivo.";
            claseAviso = "alert alert-warning";
            return;
        }

        await CargarArchivoCompleta(archivoActual.Id);
    }

    private async Task CargarArchivoCompleta(int numeroArchivo)
    {
        LimpiarMensajes();

        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "consultar_archivo",
                ["Id"] = numeroArchivo
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (!respuesta.IsSuccessStatusCode)
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar objetivo: {detalle}";
                claseAviso = "alert alert-danger";
                return;
            }

            var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaSP>();

            if (resultado?.Resultados == null || resultado.Resultados.Count == 0)
            {
                mensaje = "Archivo no encontrado.";
                claseAviso = "alert alert-warning";
                return;
            }

            var primeraFila = resultado.Resultados[0];

            // 1) Si la fila contiene una clave "Resultado" con JSON -> deserializar
            if (primeraFila.TryGetValue("Resultado", out var val) && val != null)
            {
                var json = val.ToString();
                if (!string.IsNullOrWhiteSpace(json))
                {
                    var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                    var objetivoDesdeJson = JsonSerializer.Deserialize<ArchivoCompleta>(json, options);
                    if (objetivoDesdeJson != null)
                    {
                        await PoblarDtoDesdeCompleta(objetivoDesdeJson);
                        return;
                    }
                }
            }

            // 2) Si la fila ya viene con columnas (id, titulo, descripcion, usuario) -> mapear directamente
            var normal = primeraFila.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
            if (normal.Count > 0)
            {
                var id = ObtenerInt(normal, "id");
                var ruta = ObtenerString(normal, "ruta");
                var nombre = ObtenerString(normal, "nombre");
                var tipo = ObtenerString(normal, "tipo");
                var fecha = ObtenerDateTime(normal, "fecha");

                // variable puede venir como nombre o como id (IdVariable o variable)
                var variableStr = ObtenerString(normal, "usuario");
                if (string.IsNullOrEmpty(variableStr))
                    variableStr = ObtenerString(normal, "idusuario"); // fallback
                int fkId = 0;
                var encontradoPorTitulo = listaUsuarios.FirstOrDefault(c => c.Email == variableStr);
                if (encontradoPorTitulo != null)
                    fkId = encontradoPorTitulo.Id;
                else if (int.TryParse(variableStr, out var parsed))
                    fkId = parsed;

                archivoActual = new ArchivoDto
                {
                    Id = id,
                    FkIdUsuario = fkId,
                    Ruta = ruta ?? "",
                    Nombre = nombre ?? "",
                    Tipo = tipo ?? "",
                    Fecha = fecha
                };

                existeObjetivo = true;
                textoBotonGuardar = "Actualizar";
                mensaje = $"Archivo #{numeroArchivo} cargado.";
                claseAviso = "alert alert-success";
                StateHasChanged();
                return;
            }

            mensaje = "No se pudo interpretar el resultado del procedimiento.";
            claseAviso = "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al cargar Archivo: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarArchivoCompleta: {ex}");
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeObjetivo)
            await ActualizarArchivo();
        else
            await CrearArchivo();
    }

    private async Task CrearArchivo()
    {
        LimpiarMensajes();

        try
        {
            // validaciones básicas
            archivoActual.Ruta = archivoActual.Ruta?.Trim() ?? "";
            archivoActual.Nombre = archivoActual.Nombre?.Trim() ?? "";
            archivoActual.Tipo = archivoActual.Tipo?.Trim() ?? "";


            if (archivoActual.FkIdUsuario <= 0)
            {
                mensaje = "⚠️ Debe seleccionar Variable Estrategica.";
                claseAviso = "alert alert-warning";
                return;
            }

            if (string.IsNullOrEmpty(archivoActual.Nombre))
            {
                mensaje = "⚠️ El nombre es obligatorio.";
                claseAviso = "alert alert-warning";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            // envío los parámetros con los nombres exactos que espera el SP en SQL Server
            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "crear_archivo",
                ["IdUsuario"] = archivoActual.FkIdUsuario,
                ["Ruta"] = archivoActual.Ruta,
                ["Nombre"] = archivoActual.Nombre,
                ["Tipo"] = archivoActual.Tipo,
                ["Fecha"] = archivoActual.Fecha
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Archivo creado exitosamente.";
                claseAviso = "alert alert-success";
                await CargarArchivos();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                Console.WriteLine(detalle); // ayuda a debugging en el servidor
                mensaje = $"❌ Error al crear objetivo: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al crear Archivo: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CrearArchivo: {ex}");
        }
    }

    private async Task ActualizarArchivo()
    {
        LimpiarMensajes();

        try
        {
            if (archivoActual.Id <= 0)
            {
                mensaje = "⚠️ Debe indicar el número de Archivo.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de actualizar el objetivo #{archivoActual.Id}?");
            if (!confirmar)
            {
                mensaje = "ℹ️ Actualización cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "actualizar_archivo",
                ["IdUsuario"] = archivoActual.FkIdUsuario,
                ["Ruta"] = archivoActual.Ruta,
                ["Nombre"] = archivoActual.Nombre,
                ["Tipo"] = archivoActual.Tipo,
                ["Fecha"] = archivoActual.Fecha,
                ["Id"] = archivoActual.Id
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Archivo actualizado exitosamente.";
                claseAviso = "alert alert-success";

                // Actualiza la lista local si existe el elemento
                var item = listaArchivos.FirstOrDefault(x => x.Id == archivoActual.Id);
                if (item != null)
                {
                    item.Ruta = archivoActual.Ruta;
                    item.Nombre = archivoActual.Nombre;
                    item.Tipo = archivoActual.Tipo;
                    item.Fecha = archivoActual.Fecha;
                    item.Usuario = listaUsuarios
                        .FirstOrDefault(v => v.Id == archivoActual.FkIdUsuario)?.Email
                        ?? archivoActual.FkIdUsuario.ToString();
                    StateHasChanged();
                }

                // opcional: refrescar toda la lista para garantizar consistencia con BD
                await CargarArchivos();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                Console.WriteLine(detalle);
                mensaje = $"❌ Error al actualizar: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al actualizar Archivo: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception ActualizarArchivo: {ex}");
        }
    }

    private async Task EliminaArchivo()
    {
        LimpiarMensajes();

        try
        {
            if (archivoActual.Id <= 0)
            {
                mensaje = "Debe indicar el número de Archivo.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de eliminar el objetivo #{archivoActual.Id}?");
            if (!confirmar)
            {
                mensaje = "Eliminación cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "eliminar_archivo",
                ["Id"] = archivoActual.Id
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Objetivo eliminado correctamente.";
                claseAviso = "alert alert-success";
                await CargarArchivos();
                LimpiarFormulario();
            }
            else
            {
