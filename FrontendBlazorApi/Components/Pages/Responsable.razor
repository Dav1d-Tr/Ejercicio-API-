@page "/responsable"
@using System.Net.Http.Json
@using System.Text.Json
@using System.Text.Json.Serialization
@using System.Linq
@using System.ComponentModel.DataAnnotations
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Responsables</PageTitle>

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-receipt fs-2 text-primary me-3"></i>
        <h3 class="mb-0">Gestión de Responsables</h3>
    </div>

    <div class="mb-3 d-flex gap-2 flex-wrap">
        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-white fw-semibold" style="
                        background: linear-gradient(to bottom, #414448, #646c7d);
                        border: 1px solid #6a6a6c;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="ProbarConexion" title="Probar conexión con la API" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Probar Conexión</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-white fw-semibold" style="
                        background: linear-gradient(to bottom, #357de9, #8ea6e0);
                        border: 1px solid #8ea6e0;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="CargarResponsables" title="Mostrar todos los responsables" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Mostrar Todos</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-black fw-semibold" style="
                        background: linear-gradient(to bottom, #ffffff, #c3cde7);
                        border: 1px solid #dde5f8;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="LimpiarFormulario" title="Limpiar formulario" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Limpiar</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>@mensaje
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-clipboard-plus me-2"></i>Formulario de Responsable</h4>
        </div>
        <div class="card-body">
            <EditForm EditContext="editContext" OnValidSubmit="GuardarSegunEstado">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Id
                        </label>
                        <InputNumber class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableActual.Id" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Tipo De Responsable
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableActual.FkIdTipoResponsable">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaTipoResponsables)
                            {
                                <option value="@c.Id">@c.Titulo (ID: @c.Id)</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Usuario
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableActual.FkIdUsuario">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaUsuarios)
                            {
                                <option value="@c.Id">@c.Id (ID: @c.Id)</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Nombre
                        </label>
                        <InputText class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableActual.Nombre" />
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <button type="submit"
                        class="btn-create d-flex align-items-center gap-1 text-white font-weight-bold border border-success rounded-pill px-4 py-2">
                        <img src="icons/paper-plane-solid.svg" alt="Guardar" width="24" height="24" class="me-1" />
                        @textoBotonGuardar
                    </button>
                    <button type="button"
                        class="btn-buscar d-flex align-items-center gap-1 text-white font-weight-bold border border-secondary rounded-pill px-4 py-2"
                        @onclick="BuscarPorNumero" title="Buscar responsable por número">
                        <img src="icons/magnifying-glass-solid.svg" alt="Buscar" width="24" height="24" class="me-1" />
                        Buscar
                    </button>

                    <button type="button"
                        class="btn-eliminar d-flex align-items-center gap-1 text-white font-weight-bold border border-danger rounded-pill px-4 py-2"
                        @onclick="EliminaResponsable" disabled="@(!existeObjetivo)" title="Eliminar responsable">
                        <img src="icons/trash-can-solid.svg" alt="Eliminar" width="24" height="24" class="me-1" />
                        Eliminar
                    </button>

                </div>
            </EditForm>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-table me-2"></i>Lista de Responsables</h4>
        </div>
        <div class="card-body">
            @if (cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3"><em>Cargando Responsables...</em></p>
                </div>
            }
            else if (listaResponsables.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No hay Responsables disponibles.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th><i class="bi bi-hash me-1"></i>Id</th>
                                <th><i class="bi bi-person me-1"></i>Tipo De Responsable</th>
                                <th><i class="bi bi-person-badge me-1"></i>Usuario</th>
                                <th><i class="bi bi-calendar me-1"></i>Nombre</th>
                                <th><i class="bi bi-gear me-1"></i>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var f in listaResponsables)
                            {
                                <tr>
                                    <td>@f.Id</td>
                                    <td>@(string.IsNullOrWhiteSpace(f.TipoResponsable) ? f.IdTipoResponsable?.ToString() : f.TipoResponsable)</td>
                                    <td>@(string.IsNullOrWhiteSpace(f.Usuario) ? f.IdUsuario?.ToString() : f.Usuario)</td>
                                    <td>@f.Nombre</td>
                                    <td>
                                        <button class="btn-cargar d-flex align-items-center gap-1 text-white font-weight-bold border border-primary rounded-pill px-4 py-2"
                                                @onclick="@(async () => await CargarResponsableCompleta(f.Id))" 
                                                title="Cargar Responsable en formulario">
                                            <img src="icons/spinner-solid.svg" alt="Cargar" width="24" height="24" class="me-1" />
                                            Cargar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private EditContext? editContext;
    private List<ResponsableCompleta> listaResponsables = new();
    private List<UsuarioDto> listaUsuarios = new();
    private List<TipoResponsableDto> listaTipoResponsables = new();

    private ResponsableDto responsableActual { get; set; } = new();

    private bool existeObjetivo = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlProcedimientos = "api/procedimientos/ejecutarsp";
    private const string urlConsultas = "api/consultas/ejecutarconsultaparametrizada";
    private const string urlResponsables = "api/Responsable";
    private const string urlUsuarios = "api/Usuario";
    private const string urlTipoResponsables = "api/TipoResponsable";

    protected override async Task OnInitializedAsync()
    {
        // inicializa EditContext para que el EditForm lo use
        editContext = new EditContext(responsableActual);

        // Cargar variables primero para evitar race conditions al mapear nombres.
        await CargarUsuarios();
        await CargarTipoResponsables();
        await CargarResponsables();
    }

    private async Task CargarTipoResponsables()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlTipoResponsables);

            listaTipoResponsables = respuesta?.Datos?.Select(d =>
            {
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new TipoResponsableDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Titulo = ObtenerString(normal, "titulo")
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            mensaje = $"Error cargando TipoResponsables: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarTipoResponsables: {ex}");
        }
    }

    private async Task CargarUsuarios()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlUsuarios);

            listaUsuarios = respuesta?.Datos?.Select(d =>
            {
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new UsuarioDto
                {
                    Id = ObtenerInt(normal, "id"),
                    RutaAvatar = ObtenerString(normal, "rutaavatar") // si existe
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            mensaje = $"Error cargando Usuarios: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarUsuarios: {ex}");
        }
    }

    private async Task CargarResponsables()
    {
        try
        {
            cargando = true;
            StateHasChanged();

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametrosConsulta = new Dictionary<string, object?>
            {
                ["consulta"] = @"
                    SELECT 
                        f.id, 
                        f.IdTipoResponsable AS fkidtiporesponsable , 
                        f.IdUsuario AS fkidusuario, 
                        f.nombre
                    FROM Responsable f 
                    ORDER BY f.id DESC",
                ["parametros"] = new Dictionary<string, object?>()
            };

            var respuesta = await client.PostAsJsonAsync(urlConsultas, parametrosConsulta);

            if (respuesta.IsSuccessStatusCode)
            {
                var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaConsulta>();

                listaResponsables = resultado?.Resultados?.Select(d =>
                {
                    var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);

                    var id = ObtenerInt(normal, "id");
                    var fkTipo = ObtenerInt(normal, "fkidtiporesponsable");
                    var fkUsuario = ObtenerInt(normal, "fkidusuario");
                    var nombre = ObtenerString(normal, "nombre");

                    var tipoTitulo = listaTipoResponsables.FirstOrDefault(x => x.Id == fkTipo)?.Titulo ?? "";
                    var usuarioDisplay = listaUsuarios.FirstOrDefault(x => x.Id == fkUsuario)?.Id.ToString() ?? fkUsuario.ToString();

                    return new ResponsableCompleta
                    {
                        Id = id,
                        Nombre = nombre,
                        IdTipoResponsable = fkTipo == 0 ? (int?)null : fkTipo,
                        TipoResponsable = tipoTitulo,
                        IdUsuario = fkUsuario == 0 ? (int?)null : fkUsuario,
                        Usuario = usuarioDisplay
                    };

                }).ToList() ?? new();

                mensaje = $"Se cargaron {listaResponsables.Count} Responsable(s).";
                claseAviso = "alert alert-success";
                StateHasChanged();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar Responsables: {detalle}";
                claseAviso = "alert alert-danger";
                Console.WriteLine($"Detalle CargarResponsables: {detalle}");
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar Responsables: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarResponsables: {ex}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task BuscarPorNumero()
    {
        LimpiarMensajes();

        if (responsableActual.Id <= 0)
        {
            mensaje = "Debe indicar el número de Responsable.";
            claseAviso = "alert alert-warning";
            return;
        }

        await CargarResponsableCompleta(responsableActual.Id);
    }

    private async Task CargarResponsableCompleta(int numeroResponsable)
    {
        LimpiarMensajes();

        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "consultar_responsable",
                ["p_numobjetivo"] = numeroResponsable
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (!respuesta.IsSuccessStatusCode)
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar responsable: {detalle}";
                claseAviso = "alert alert-danger";
                return;
            }

            var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaSP>();

            if (resultado?.Resultados == null || resultado.Resultados.Count == 0)
            {
                mensaje = "Responsable no encontrado.";
                claseAviso = "alert alert-warning";
                return;
            }

            var primeraFila = resultado.Resultados[0];

            // 1) Si la fila contiene una clave "Resultado" con JSON -> deserializar
            if (primeraFila.TryGetValue("Resultado", out var val) && val != null)
            {
                var json = val.ToString();
                if (!string.IsNullOrWhiteSpace(json))
                {
                    var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                    var objetivoDesdeJson = JsonSerializer.Deserialize<ResponsableCompleta>(json, options);
                    if (objetivoDesdeJson != null)
                    {
                        await PoblarDtoDesdeCompleta(objetivoDesdeJson);
                        return;
                    }
                }
            }

            // 2) Si la fila ya viene con columnas (id, nombre, fkidusuario, fkidtiporesponsable) -> mapear directamente
            var normal = primeraFila.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
            if (normal.Count > 0)
            {
                var id = ObtenerInt(normal, "id");
                var nombre = ObtenerString(normal, "nombre");
                var fkUsuario = ObtenerInt(normal, "fkidusuario");
                var fkTipo = ObtenerInt(normal, "fkidtiporesponsable");

                responsableActual = new ResponsableDto
                {
                    Id = id,
                    Nombre = nombre ?? "",
                    FkIdUsuario = fkUsuario,
                    FkIdTipoResponsable = fkTipo
                };

                existeObjetivo = true;
                textoBotonGuardar = "Actualizar";
                mensaje = $"Responsable #{numeroResponsable} cargado.";
                claseAviso = "alert alert-success";
                StateHasChanged();
                return;
            }

            mensaje = "No se pudo interpretar el resultado del procedimiento.";
            claseAviso = "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al cargar Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarResponsableCompleta: {ex}");
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeObjetivo)
            await ActualizarResponsable();
        else
            await CrearResponsable();
    }

    private async Task CrearResponsable()
    {
        LimpiarMensajes();

        try
        {
            // validaciones básicas
            responsableActual.Nombre = responsableActual.Nombre?.Trim() ?? "";

            if (responsableActual.FkIdUsuario <= 0)
            {
                mensaje = "⚠️ Debe seleccionar usuario.";
                claseAviso = "alert alert-warning";
                return;
            }

            if (responsableActual.FkIdTipoResponsable <= 0)
            {
                mensaje = "⚠️ Debe seleccionar Tipo De Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            if (string.IsNullOrEmpty(responsableActual.Nombre))
            {
                mensaje = "⚠️ El Nombre es obligatorio.";
                claseAviso = "alert alert-warning";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            // envio parámetros correctos (antes estaban invertidos)
            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "crear_responsable",
                ["IdTipoResponsable"] = responsableActual.FkIdTipoResponsable,
                ["Nombre"] = responsableActual.Nombre,
                ["IdUsuario"] = responsableActual.FkIdUsuario
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Responsable creado exitosamente.";
                claseAviso = "alert alert-success";
                await CargarResponsables();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                Console.WriteLine(detalle);
                mensaje = $"❌ Error al crear responsable: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al crear Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CrearResponsable: {ex}");
        }
    }

    private async Task ActualizarResponsable()
    {
        LimpiarMensajes();

        try
        {
            if (responsableActual.Id <= 0)
            {
                mensaje = "⚠️ Debe indicar el número de Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de actualizar el responsable #{responsableActual.Id}?");
            if (!confirmar)
            {
                mensaje = "ℹ️ Actualización cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "actualizar_responsable",
                ["IdTipoResponsable"] = responsableActual.FkIdTipoResponsable,
                ["Nombre"] = responsableActual.Nombre,
                ["IdUsuario"] = responsableActual.FkIdUsuario,
                ["Id"] = responsableActual.Id
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Responsable actualizado exitosamente.";
                claseAviso = "alert alert-success";

                // Actualiza la lista local si existe el elemento
                var item = listaResponsables.FirstOrDefault(x => x.Id == responsableActual.Id);
                if (item != null)
                {
                    item.Nombre = responsableActual.Nombre;
                    item.Usuario = listaUsuarios.FirstOrDefault(v => v.Id == responsableActual.FkIdUsuario)?.Id.ToString()
                                   ?? responsableActual.FkIdUsuario.ToString();
                    item.IdUsuario = responsableActual.FkIdUsuario;
                    item.TipoResponsable = listaTipoResponsables.FirstOrDefault(v => v.Id == responsableActual.FkIdTipoResponsable)?.Titulo
                                           ?? responsableActual.FkIdTipoResponsable.ToString();
                    item.IdTipoResponsable = responsableActual.FkIdTipoResponsable;
                    StateHasChanged();
                }

                // refrescar para mantener consistencia con BD
                await CargarResponsables();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                Console.WriteLine(detalle);
                mensaje = $"❌ Error al actualizar: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al actualizar Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception ActualizarResponsable: {ex}");
        }
    }

    private async Task EliminaResponsable()
    {
        LimpiarMensajes();

        try
        {
            if (responsableActual.Id <= 0)
            {
                mensaje = "Debe indicar el número de Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de eliminar el responsable #{responsableActual.Id}?");
            if (!confirmar)
            {
                mensaje = "Eliminación cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "eliminar_responsable",
                ["Id"] = responsableActual.Id
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Responsable eliminado correctamente.";
                claseAviso = "alert alert-success";
                await CargarResponsables();
                LimpiarFormulario();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                Console.WriteLine(detalle);
                mensaje = $"❌ Error al eliminar: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
