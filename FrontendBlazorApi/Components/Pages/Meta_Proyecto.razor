                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Mostrar Todos</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-black fw-semibold" style="
                        background: linear-gradient(to bottom, #ffffff, #c3cde7);
                        border: 1px solid #dde5f8;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="LimpiarFormulario" title="Limpiar formulario" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Limpiar</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>@mensaje
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-clipboard-plus me-2"></i>Formulario de Responsable</h4>
        </div>
        <div class="card-body">
            <EditForm EditContext="editContext" OnValidSubmit="GuardarSegunEstado">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Proyecto
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="metaProyectoActual.FkIdProyecto">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaProyectos)
                            {
                                <option value="@c.Id">@c.Titulo (ID: @c.Id)</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Meta
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="metaProyectoActual.FkIdMeta">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaMetas)
                            {
                                <option value="@c.Id">@c.Titulo (ID: @c.Id)</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha De Asociación
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="metaProyectoActual.FechaAsociacion" />
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <button type="submit"
                        class="btn-create d-flex align-items-center gap-1 text-white font-weight-bold border border-success rounded-pill px-4 py-2">
                        <img src="icons/paper-plane-solid.svg" alt="Guardar" width="24" height="24" class="me-1" />
                        @textoBotonGuardar
                    </button>
                    <button type="button"
                        class="btn-buscar d-flex align-items-center gap-1 text-white font-weight-bold border border-secondary rounded-pill px-4 py-2"
                        @onclick="BuscarPorNumero" title="Buscar responsable por número">
                        <img src="icons/magnifying-glass-solid.svg" alt="Buscar" width="24" height="24" class="me-1" />
                        Buscar
                    </button>

                    <button type="button"
                        class="btn-eliminar d-flex align-items-center gap-1 text-white font-weight-bold border border-danger rounded-pill px-4 py-2"
                        @onclick="EliminaMetaProyecto" disabled="@(!existeObjetivo)" title="Eliminar responsable">
                        <img src="icons/trash-can-solid.svg" alt="Eliminar" width="24" height="24" class="me-1" />
                        Eliminar
                    </button>

                </div>
            </EditForm>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-table me-2"></i>Lista de Responsables</h4>
        </div>
        <div class="card-body">
            @if (cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3"><em>Cargando Responsables...</em></p>
                </div>
            }
            else if (listaMetaProyectos.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No hay MetaProyectos disponibles.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th><i class="bi bi-person me-1"></i>Proyecto</th>
                                <th><i class="bi bi-person-badge me-1"></i>Meta</th>
                                <th><i class="bi bi-calendar me-1"></i>Fecha De Asociacion</th>
                                <th><i class="bi bi-gear me-1"></i>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mp in listaMetaProyectos)
                            {
                                <tr>
                                    <td>@(string.IsNullOrWhiteSpace(mp.Proyecto) ? mp.IdProyecto?.ToString() : mp.Proyecto)</td>
                                    <td>@(string.IsNullOrWhiteSpace(mp.Meta) ? mp.IdMeta?.ToString() : mp.Meta)</td>
                                    <td>@mp.FechaAsociacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn-cargar d-flex align-items-center gap-1 text-white font-weight-bold border border-primary rounded-pill px-4 py-2"
