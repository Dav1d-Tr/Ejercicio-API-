                        <InputText class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.Descripcion" />
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha De Inicio
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.FechaInicio" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha Del Fin Prevista
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.FechaFinPrevista" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha De Modificacion
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.FechaModificacion" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha De Finalizacion
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.FechaFinalizacion" />
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Prioridad
                        </label>
                        <InputNumber class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.Prioridad" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Porcentaje De Avance
                        </label>
                        <InputNumber class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.PorcentajeAvance" />
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <button type="submit"
                        class="btn-create d-flex align-items-center gap-1 text-white font-weight-bold border border-success rounded-pill px-4 py-2">
                        <img src="icons/paper-plane-solid.svg" alt="Guardar" width="24" height="24" class="me-1" />
                        @textoBotonGuardar
