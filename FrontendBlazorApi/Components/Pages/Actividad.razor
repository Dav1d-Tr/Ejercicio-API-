        @*Boton Limpiar*@
        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3"
                style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
