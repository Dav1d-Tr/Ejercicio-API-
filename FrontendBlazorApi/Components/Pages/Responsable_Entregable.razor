@page "/responsable_Entregable"
@using System.Net.Http.Json
@using System.Text.Json
@using System.Text.Json.Serialization
@using System.Linq
@using System.ComponentModel.DataAnnotations
@inject IHttpClientFactory fabricaHttp
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Responsables</PageTitle>

<div class="container-fluid py-3">
    <div class="d-flex align-items-center mb-4">
        <i class="bi bi-receipt fs-2 text-primary me-3"></i>
        <h3 class="mb-0">Gestión de Responsables</h3>
    </div>

    <div class="mb-3 d-flex gap-2 flex-wrap">
        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-white fw-semibold" style="
                        background: linear-gradient(to bottom, #414448, #646c7d);
                        border: 1px solid #6a6a6c;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="ProbarConexion" title="Probar conexión con la API" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Probar Conexión</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-white fw-semibold" style="
                        background: linear-gradient(to bottom, #357de9, #8ea6e0);
                        border: 1px solid #8ea6e0;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="CargarResponsableEntregables" title="Mostrar todos los responsables" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Mostrar Todos</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>

        <div class="d-flex justify-content-center align-items-center h-100 gap-3">
            <div class="bg-gradient p-1 rounded-3" style="background: linear-gradient(to bottom, rgba(168, 168, 168, 0.4), transparent);">
                <button type="button" class="btn p-1 rounded-2 shadow text-black fw-semibold" style="
                        background: linear-gradient(to bottom, #ffffff, #c3cde7);
                        border: 1px solid #dde5f8;
                        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                        transition: all 0.15s ease-in-out;
                    " @onclick="LimpiarFormulario" title="Limpiar formulario" onmousedown="this.style.transform='scale(0.98)';" onmouseup="this.style.transform='scale(1)';">
                    <div class="rounded-1 px-3 py-2">
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Limpiar</span>
                        </div>
                    </div>
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensaje))
    {
        <div class="@claseAviso shadow-sm" role="alert">
            <i class="bi bi-info-circle me-2"></i>@mensaje
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-clipboard-plus me-2"></i>Formulario de Responsable</h4>
        </div>
        <div class="card-body">
            <EditForm EditContext="editContext" OnValidSubmit="GuardarSegunEstado">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Entregable
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableEntregableActual.FkIdEntregable">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaEntregables)
                            {
                                <option value="@c.Id">@c.Titulo (ID: @c.Id)</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Responsable
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableEntregableActual.FkIdResponsable">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaProducts)
                            {
                                <option value="@c.Id">@c.Titulo (ID: @c.Id)</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-hash text-primary"></i> Fecha De Asociación
                        </label>
                        <InputDate class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="responsableEntregableActual.FechaAsociacion" />
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mt-3 d-flex flex-wrap gap-2">
                    <button type="submit"
                        class="btn-create d-flex align-items-center gap-1 text-white font-weight-bold border border-success rounded-pill px-4 py-2">
                        <img src="icons/paper-plane-solid.svg" alt="Guardar" width="24" height="24" class="me-1" />
                        @textoBotonGuardar
                    </button>
                    <button type="button"
                        class="btn-buscar d-flex align-items-center gap-1 text-white font-weight-bold border border-secondary rounded-pill px-4 py-2"
                        @onclick="BuscarPorNumero" title="Buscar responsable por número">
                        <img src="icons/magnifying-glass-solid.svg" alt="Buscar" width="24" height="24" class="me-1" />
                        Buscar
                    </button>

                    <button type="button"
                        class="btn-eliminar d-flex align-items-center gap-1 text-white font-weight-bold border border-danger rounded-pill px-4 py-2"
                        @onclick="EliminaResponsableEntregable" disabled="@(!existeObjetivo)" title="Eliminar responsable">
                        <img src="icons/trash-can-solid.svg" alt="Eliminar" width="24" height="24" class="me-1" />
                        Eliminar
                    </button>

                </div>
            </EditForm>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-table me-2"></i>Lista de Responsables</h4>
        </div>
        <div class="card-body">
            @if (cargando)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <p class="mt-3"><em>Cargando Responsables...</em></p>
                </div>
            }
            else if (listaResponsableEntregables.Count == 0)
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No hay ResponsableEntregables disponibles.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th><i class="bi bi-person me-1"></i>Entregable</th>
                                <th><i class="bi bi-person-badge me-1"></i>Responsable</th>
                                <th><i class="bi bi-calendar me-1"></i>Fecha De Asociacion</th>
                                <th><i class="bi bi-gear me-1"></i>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var f in listaResponsableEntregables)
                            {
                                <tr>
                                    <td>@(string.IsNullOrWhiteSpace(f.Entregable) ? f.IdEntregable?.ToString() : f.Entregable)</td>
                                    <td>@(string.IsNullOrWhiteSpace(f.Responsable) ? f.IdResponsable?.ToString() : f.Responsable)</td>
                                    <td>@f.FechaAsociacion.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn-cargar d-flex align-items-center gap-1 text-white font-weight-bold border border-primary rounded-pill px-4 py-2"
                                            @onclick="@(async () => await CargarResponsableEntregableCompleta(f.IdEntregable.Value))"
                                            title="Cargar Responsable en formulario">
                                            <img src="icons/spinner-solid.svg" alt="Cargar" width="24" height="24" class="me-1" />
                                            Cargar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private EditContext? editContext;
    private List<ResponsableEntregableCompleta> listaResponsableEntregables = new();
    private List<ProductDto> listaProducts = new();
    private List<EntregableDto> listaEntregables = new();

    private ResponsableEntregableDto responsableEntregableActual { get; set; } = new();

    private bool existeObjetivo = false;
    private string textoBotonGuardar = "Crear";
    private string mensaje = "";
    private string claseAviso = "alert alert-info";
    private bool cargando = false;

    private const string urlProcedimientos = "api/procedimientos/ejecutarsp";
    private const string urlConsultas = "api/consultas/ejecutarconsultaparametrizada";
    private const string urlResponsableEntregables = "api/Responsable_Entregable";
    private const string urlProducts = "api/Responsable";
    private const string urlEntregables = "api/Entregable";

    protected override async Task OnInitializedAsync()
    {
        // inicializa EditContext para que el EditForm lo use
        editContext = new EditContext(responsableEntregableActual);

        // Cargar variables primero para evitar race conditions al mapear nombres.
        await CargarProducts();
        await CargarEntregables();
        await CargarResponsableEntregables();
    }

    private async Task CargarEntregables()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlEntregables);

            listaEntregables = respuesta?.Datos?.Select(d =>
            {
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new EntregableDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Titulo = ObtenerString(normal, "titulo")
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            mensaje = $"Error cargando Entregables: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarEntregables: {ex}");
        }
    }

    private async Task CargarProducts()
    {
        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");
            var respuesta = await client.GetFromJsonAsync<RespuestaApi<List<Dictionary<string, object>>>>(urlProducts);

            listaProducts = respuesta?.Datos?.Select(d =>
            {
                var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
                return new ProductDto
                {
                    Id = ObtenerInt(normal, "id"),
                    Titulo = ObtenerString(normal, "titulo") // si existe
                };
            }).ToList() ?? new();
        }
        catch (Exception ex)
        {
            mensaje = $"Error cargando Products: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Error CargarProducts: {ex}");
        }
    }

    private async Task CargarResponsableEntregables()
    {
        try
        {
            cargando = true;
            StateHasChanged();

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametrosConsulta = new Dictionary<string, object?>
            {
                ["consulta"] = @"
                    SELECT 
                        f.IdEntregable AS identregable, 
                        f.IdResponsable AS idresponsable, 
                        f.fechaAsociacion
                    FROM Responsable_Entregable f 
                    ORDER BY f.IdEntregable DESC",
                ["parametros"] = new Dictionary<string, object?>()
            };

            var respuesta = await client.PostAsJsonAsync(urlConsultas, parametrosConsulta);

            if (respuesta.IsSuccessStatusCode)
            {
                var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaConsulta>();

                listaResponsableEntregables = resultado?.Resultados?.Select(d =>
                {
                    var normal = d.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);

                    var fkTipo = ObtenerInt(normal, "identregable");
                    var fkResponsable = ObtenerInt(normal, "idresponsable");
                    var fechaAsociacion = ObtenerDateTime(normal, "fechaasociacion");

                    var tipoTitulo = listaEntregables.FirstOrDefault(x => x.Id == fkTipo)?.Titulo ?? "";
                    var responsableDisplay = listaProducts.FirstOrDefault(x => x.Id == fkResponsable)?.Id.ToString() ?? fkResponsable.ToString();

                    return new ResponsableEntregableCompleta
                    {
                        IdEntregable = fkTipo,
                        IdResponsable = fkResponsable,
                        FechaAsociacion = fechaAsociacion,
                        Entregable = tipoTitulo,
                        Responsable = responsableDisplay
                    };

                }).ToList() ?? new();

                mensaje = $"Se cargaron {listaResponsableEntregables.Count} asociaciones Responsable-Entregable.";
                claseAviso = "alert alert-success";
                StateHasChanged();
            }
            else
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar Responsable_Entregable: {detalle}";
                claseAviso = "alert alert-danger";
                Console.WriteLine($"Detalle CargarResponsableEntregables: {detalle}");
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error al listar Responsable_Entregable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarResponsableEntregables: {ex}");
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }


    private async Task BuscarPorNumero()
    {
        LimpiarMensajes();

        if (responsableEntregableActual.FkIdEntregable <= 0)
        {
            mensaje = "Debe indicar el número de Responsable.";
            claseAviso = "alert alert-warning";
            return;
        }

        await CargarResponsableEntregableCompleta(responsableEntregableActual.FkIdEntregable);
    }

    private async Task CargarResponsableEntregableCompleta(int numeroResponsableEntregable)
    {
        LimpiarMensajes();

        try
        {
            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "consultar_responsable_entregable",
                ["p_IdEntregable"] = numeroResponsableEntregable
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (!respuesta.IsSuccessStatusCode)
            {
                var detalle = await respuesta.Content.ReadAsStringAsync();
                mensaje = $"❌ Error al cargar responsable: {detalle}";
                claseAviso = "alert alert-danger";
                return;
            }

            var resultado = await respuesta.Content.ReadFromJsonAsync<RespuestaSP>();

            if (resultado?.Resultados == null || resultado.Resultados.Count == 0)
            {
                mensaje = "Responsable no encontrado.";
                claseAviso = "alert alert-warning";
                return;
            }

            var primeraFila = resultado.Resultados[0];

            // 1) Si la fila contiene una clave "Resultado" con JSON -> deserializar
            if (primeraFila.TryGetValue("Resultado", out var val) && val != null)
            {
                var json = val.ToString();
                if (!string.IsNullOrWhiteSpace(json))
                {
                    var options = new JsonSerializerOptions { PropertyNameCaseInsensitive = true };
                    var objetivoDesdeJson = JsonSerializer.Deserialize<ResponsableEntregableCompleta>(json, options);
                    if (objetivoDesdeJson != null)
                    {
                        await PoblarDtoDesdeCompleta(objetivoDesdeJson);
                        return;
                    }
                }
            }

            // 2) Si la fila ya viene con columnas (id, nombre, fkidresponsable, fkidentregable) -> mapear directamente
            var normal = primeraFila.ToDictionary(k => (k.Key ?? "").ToLowerInvariant(), v => v.Value);
            if (normal.Count > 0)
            {
                //var fechaAsociacion = ObtenerDateTime(normal, "fechaasociacion");
                //var fkResponsable= ObtenerInt(normal, "fkidresponsable");
                //var fkTipo = ObtenerInt(normal, "fkidentregable");

                var fkResponsable = ObtenerInt(normal, "idresponsable");
                var fkTipo = ObtenerInt(normal, "identregable");
                var fechaAsociacion = ObtenerDateTime(normal, "fechaasociacion");

                responsableEntregableActual = new ResponsableEntregableDto
                {
                    FechaAsociacion = fechaAsociacion,
                    FkIdResponsable = fkResponsable,
                    FkIdEntregable = fkTipo
                };

                existeObjetivo = true;
                textoBotonGuardar = "Actualizar";
                mensaje = $"Responsable #{numeroResponsableEntregable} cargado.";
                claseAviso = "alert alert-success";
                StateHasChanged();
                return;
            }

            mensaje = "No se pudo interpretar el resultado del procedimiento.";
            claseAviso = "alert alert-warning";
        }
        catch (Exception ex)
        {
            mensaje = $"Error al cargar Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CargarResponsableEntregableCompleta: {ex}");
        }
    }

    private async Task GuardarSegunEstado()
    {
        if (existeObjetivo)
            await ActualizarResponsableEntregable();
        else
            await CrearResponsableEntregable();
    }

    private async Task CrearResponsableEntregable()
    {
        LimpiarMensajes();

        try
        {
            // validaciones básicas
            //responsableEntregableActual.Nombre = responsableEntregableActual.Nombre?.Trim() ?? "";

