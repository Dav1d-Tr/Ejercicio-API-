    private async Task ActualizarMetaProyecto()
    {
        LimpiarMensajes();

        try
        {
            if (metaProyectoActual.FkIdProyecto <= 0)
            {
                mensaje = "⚠️ Debe indicar el número de Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de actualizar el responsable #{metaProyectoActual.FkIdProyecto}?");
            if (!confirmar)
            {
                mensaje = "ℹ️ Actualización cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "actualizar_meta_proyecto",
                ["p_IdProyecto"] = metaProyectoActual.FkIdProyecto,
                ["p_FechaAsociacion"] = metaProyectoActual.FechaAsociacion,
