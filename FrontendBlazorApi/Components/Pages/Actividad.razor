                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-person text-primary"></i> Entregable
                        </label>
                        <InputSelect class="form-control bg-dark text-white border border-secondary rounded-lg transition duration-100 focus:border-info" @bind-Value="actividadActual.IdEntregable">
                            <option value="0">-- Seleccione --</option>
                            @foreach (var c in listaEntregables)
