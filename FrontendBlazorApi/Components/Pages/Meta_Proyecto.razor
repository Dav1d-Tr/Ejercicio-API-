    private async Task PoblarDtoDesdeCompleta(MetaProyectoCompleta completa)
    {
        int fkId = 0;
        int fkIdTR = 0;

        // Proyecto: si viene texto intenta match por título; si viene id intenta parsear
        if (!string.IsNullOrWhiteSpace(completa.Proyecto))
        {
            var encontradoPorTitulo = listaProyectos.FirstOrDefault(c => string.Equals(c.Titulo, completa.Proyecto, StringComparison.OrdinalIgnoreCase));
            if (encontradoPorTitulo != null)
                fkIdTR = encontradoPorTitulo.Id;
            else if (int.TryParse(completa.Proyecto, out var parsedTR))
                fkIdTR = parsedTR;
        }
        else if (completa.IdProyecto.HasValue)
        {
            fkIdTR = completa.IdProyecto.Value;
        }

        // Meta: si viene id directo
        if (completa.IdMeta.HasValue)
        {
            fkId = completa.IdMeta.Value;
        }
        else if (!string.IsNullOrWhiteSpace(completa.Meta) && int.TryParse(completa.Meta, out var parsedUsu))
        {
            fkId = parsedUsu;
        }
        else if (!string.IsNullOrWhiteSpace(completa.Meta))
        {
            var encontradoPorCodigo = listaMetas.FirstOrDefault(c => c.Id.ToString() == completa.Meta);
            if (encontradoPorCodigo != null) fkId = encontradoPorCodigo.Id;
        }

        metaProyectoActual.FechaAsociacion = completa.FechaAsociacion;
        metaProyectoActual.FkIdMeta = fkId;
        metaProyectoActual.FkIdProyecto = fkIdTR;

        existeObjetivo = true;
        textoBotonGuardar = "Actualizar";
        mensaje = $"Responsable #{completa.IdProyecto} cargado.";
        claseAviso = "alert alert-success";

        editContext?.NotifyFieldChanged(new FieldIdentifier(metaProyectoActual, nameof(metaProyectoActual.FechaAsociacion)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(metaProyectoActual, nameof(metaProyectoActual.FkIdMeta)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(metaProyectoActual, nameof(metaProyectoActual.FkIdProyecto)));

        StateHasChanged();
    }
