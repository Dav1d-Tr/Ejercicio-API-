                Console.WriteLine(detalle);
                mensaje = $"❌ Error al crear responsable: {detalle}";
                claseAviso = "alert alert-danger";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"❌ Error al crear Responsable: {ex.Message}";
            claseAviso = "alert alert-danger";
            Console.WriteLine($"Exception CrearPresupuesto: {ex}");
        }
    }

    private async Task ActualizarPresupuesto()
    {
        LimpiarMensajes();

        try
        {
            if (presupuestoActual.Id <= 0)
            {
                mensaje = "⚠️ Debe indicar el número de Responsable.";
                claseAviso = "alert alert-warning";
                return;
            }

            var confirmar = await JSRuntime.InvokeAsync<bool>("confirm",
                $"¿Está seguro de actualizar el responsable #{presupuestoActual.Id}?");
            if (!confirmar)
            {
                mensaje = "ℹ️ Actualización cancelada.";
                claseAviso = "alert alert-info";
                return;
            }

            var client = fabricaHttp.CreateClient("ApiProductos");

            var parametros = new Dictionary<string, object?>
            {
                ["nombreSP"] = "actualizar_presupuesto",
                ["IdProyecto"] = presupuestoActual.FkIdProyecto,
                ["MontoSolicitado"] = presupuestoActual.MontoSolicitado,
                ["Estado"] = presupuestoActual.Estado,
                ["MontoAprobado"] = presupuestoActual.MontoAprobado,
                ["PeriodoAnio"] = presupuestoActual.PeriodoAnio,
                ["FechaSolicitud"] = presupuestoActual.FechaSolicitud,
                ["FechaAprobacion"] = presupuestoActual.FechaAprobacion,
                ["Observaciones"] = presupuestoActual.Observaciones,
                ["Id"] = presupuestoActual.Id
            };

            var respuesta = await client.PostAsJsonAsync(urlProcedimientos, parametros);

            if (respuesta.IsSuccessStatusCode)
            {
                mensaje = "✅ Responsable actualizado exitosamente.";
                claseAviso = "alert alert-success";

                // Actualiza la lista local si existe el elemento
                var item = listaPresupuestos.FirstOrDefault(x => x.Id == presupuestoActual.Id);

