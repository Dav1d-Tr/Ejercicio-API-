    private async Task PoblarDtoDesdeCompleta(ResponsableEntregableCompleta completa)
    {
        int fkId = 0;
        int fkIdTR = 0;

        // Entregable: si viene texto intenta match por título; si viene id intenta parsear
        if (!string.IsNullOrWhiteSpace(completa.Entregable))
        {
            var encontradoPorTitulo = listaEntregables.FirstOrDefault(c => string.Equals(c.Titulo, completa.Entregable, StringComparison.OrdinalIgnoreCase));
            if (encontradoPorTitulo != null)
                fkIdTR = encontradoPorTitulo.Id;
            else if (int.TryParse(completa.Entregable, out var parsedTR))
                fkIdTR = parsedTR;
        }
        else if (completa.IdEntregable.HasValue)
        {
            fkIdTR = completa.IdEntregable.Value;
        }

        // Responsable: si viene id directo
        if (completa.IdResponsable.HasValue)
        {
            fkId = completa.IdResponsable.Value;
        }
        else if (!string.IsNullOrWhiteSpace(completa.Responsable) && int.TryParse(completa.Responsable, out var parsedUsu))
        {
            fkId = parsedUsu;
        }
        else if (!string.IsNullOrWhiteSpace(completa.Responsable))
        {
            var encontradoPorCodigo = listaProducts.FirstOrDefault(c => c.Id.ToString() == completa.Responsable);
            if (encontradoPorCodigo != null) fkId = encontradoPorCodigo.Id;
        }

        responsableEntregableActual.FechaAsociacion = completa.FechaAsociacion;
        responsableEntregableActual.FkIdResponsable = fkId;
        responsableEntregableActual.FkIdEntregable = fkIdTR;

        existeObjetivo = true;
        textoBotonGuardar = "Actualizar";
        mensaje = $"Responsable #{completa.IdEntregable} cargado.";
        claseAviso = "alert alert-success";

        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableEntregableActual, nameof(responsableEntregableActual.FechaAsociacion)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableEntregableActual, nameof(responsableEntregableActual.FkIdResponsable)));
        editContext?.NotifyFieldChanged(new FieldIdentifier(responsableEntregableActual, nameof(responsableEntregableActual.FkIdEntregable)));

        StateHasChanged();
    }
